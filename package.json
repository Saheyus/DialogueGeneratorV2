{
  "name": "dialogue-generator",
  "version": "1.0.0",
  "description": "DialogueGenerator - API REST FastAPI + Frontend React",
  "scripts": {
    "dev": "node scripts/dev.js",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "powershell -Command \"$env:API_PORT='4243'; python -m api.main\"",
    "dev:all": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "build": "cd frontend && npm install && npm run build",
    "build:check": "node scripts/check-build.js",
    "start": "python -m api.main",
    "test": "pytest tests/",
    "test:api": "pytest tests/api/",
    "test:frontend": "powershell -ExecutionPolicy Bypass -File scripts/test-frontend.ps1",
    "test:e2e": "playwright test",
    "test:all": "pytest tests/ && powershell -ExecutionPolicy Bypass -File scripts/test-frontend.ps1",
    "install:all": "pip install -r requirements.txt && cd frontend && npm install",
    "deploy:check": "powershell -ExecutionPolicy Bypass -File scripts/deploy_check.ps1",
    "deploy:build": "powershell -ExecutionPolicy Bypass -File scripts/build_production.ps1",
    "start:prod": "powershell -ExecutionPolicy Bypass -File scripts/start-production.ps1",
    "start:debug": "powershell -ExecutionPolicy Bypass -File scripts/start-debug.ps1",
    "start:api": "python -m api.main"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "dialogue",
    "generator",
    "fastapi",
    "react",
    "llm"
  ],
  "author": "",
  "license": "ISC"
}


{
  "name": "dialogue-generator",
  "version": "1.0.0",
  "description": "DialogueGenerator - API REST FastAPI + Frontend React",
  "scripts": {
    "setup": "powershell -ExecutionPolicy Bypass -File scripts/setup-venv.ps1",
    "verify:venv": "powershell -ExecutionPolicy Bypass -File scripts/verify-venv.ps1",
    "dev": "node scripts/dev.js",
    "dev:clean": "node scripts/dev.js --clear-cache",
    "dev:back": "node scripts/dev.js --backend",
    "dev:front": "node scripts/dev.js --frontend",
    "dev:stop": "node scripts/dev.js --stop",
    "dev:status": "node scripts/dev-status.js",
    "dev:check": "node scripts/dev-check.js",
    "dev:debug": "node scripts/dev.js --debug",
    "dev:verbose": "node scripts/dev.js --verbose",
    "dev:quiet": "node scripts/dev.js --quiet",
    "build": "cd frontend && npm install && npm run build",
    "build:check": "node scripts/check-build.js",
    "start": "node scripts/getPythonPath.js -m api.main",
    "test": "node scripts/getPythonPath.js -m pytest tests/",
    "test:api": "node scripts/getPythonPath.js -m pytest tests/api/",
    "test:frontend": "powershell -ExecutionPolicy Bypass -File scripts/test-frontend.ps1",
    "test:e2e": "playwright test",
    "test:all": "node scripts/getPythonPath.js -m pytest tests/ && powershell -ExecutionPolicy Bypass -File scripts/test-frontend.ps1",
    "install:all": "powershell -ExecutionPolicy Bypass -File scripts/setup-venv.ps1 && cd frontend && npm install",
    "deploy:check": "powershell -ExecutionPolicy Bypass -File scripts/deploy_check.ps1",
    "deploy:build": "powershell -ExecutionPolicy Bypass -File scripts/build_production.ps1",
    "start:prod": "powershell -ExecutionPolicy Bypass -File scripts/start-production.ps1",
    "start:debug": "powershell -ExecutionPolicy Bypass -File scripts/start-debug.ps1",
    "start:api": "node scripts/getPythonPath.js -m api.main"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/node": "^25.0.3",
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "dialogue",
    "generator",
    "fastapi",
    "react",
    "llm"
  ],
  "author": "",
  "license": "ISC"
}

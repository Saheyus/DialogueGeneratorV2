# Configuration JWT
# IMPORTANT: En production, utilisez une clé secrète forte générée aléatoirement
# Génération d'une clé sécurisée: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your-secret-key-change-in-production

# Rate Limiting (Endpoints d'authentification)
# Activer/désactiver le rate limiting sur /login et /refresh
AUTH_RATE_LIMIT_ENABLED=true
# Nombre de requêtes autorisées par fenêtre de temps
AUTH_RATE_LIMIT_REQUESTS=5
# Fenêtre de temps en secondes
AUTH_RATE_LIMIT_WINDOW=60

# Environment
# Valeurs possibles: development, production
ENVIRONMENT=development

# Clé API OpenAI (requise pour la génération de dialogues)
OPENAI_API_KEY=your-openai-api-key-here

# CORS Configuration (production uniquement)
# Format: URL1,URL2,URL3 (séparées par des virgules)
# CORS_ORIGINS=https://example.com,https://app.example.com

# Logging
# Format: json ou text (default: text en dev, json en prod)
LOG_FORMAT=
# Niveau: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Métriques Prometheus
PROMETHEUS_ENABLED=true

# Health Check
# Ping LLM dans health check (peut être lent, désactivé par défaut)
HEALTH_CHECK_LLM_PING=false

# Retry & Circuit Breaker pour appels LLM
LLM_RETRY_ENABLED=true
LLM_RETRY_MAX_ATTEMPTS=3
LLM_RETRY_BASE_DELAY=1.0

LLM_CIRCUIT_BREAKER_ENABLED=true
LLM_CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
LLM_CIRCUIT_BREAKER_TIMEOUT=60

# Sentry (optionnel)
# DSN Sentry (vide = désactivé)
SENTRY_DSN=
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# Cache GDD
GDD_CACHE_ENABLED=true
GDD_CACHE_CHECK_INTERVAL=5

# Cache HTTP
HTTP_CACHE_ENABLED=true
HTTP_CACHE_TTL_GDD=30
HTTP_CACHE_TTL_STATIC=300
HTTP_CACHE_MAX_SIZE=1000

# Pagination
PAGINATION_DEFAULT_PAGE_SIZE=50
PAGINATION_MAX_PAGE_SIZE=100

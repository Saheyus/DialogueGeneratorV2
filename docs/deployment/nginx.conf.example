# Configuration Nginx pour DialogueGenerator
# 
# Instructions:
# 1. Copier ce fichier vers votre répertoire de configuration Nginx
# 2. Ajuster les chemins et le nom de domaine
# 3. Tester la configuration: nginx -t
# 4. Recharger Nginx: nginx -s reload

server {
    listen 80;
    server_name votre-domaine.com www.votre-domaine.com;

    # Redirection HTTPS (recommandé en production)
    # return 301 https://$server_name$request_uri;

    # Taille maximale des uploads (pour les requêtes LLM longues)
    client_max_body_size 10M;
    
    # Timeout pour les requêtes longues (génération de dialogues)
    proxy_read_timeout 300s;
    proxy_connect_timeout 60s;
    proxy_send_timeout 300s;

    # Frontend statique
    location / {
        root /chemin/vers/DialogueGenerator/frontend/dist;
        try_files $uri $uri/ /index.html;
        
        # Headers de cache pour les assets statiques
        location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$ {
            expires 1y;
            add_header Cache-Control "public, immutable";
        }
    }

    # API backend
    location /api {
        proxy_pass http://localhost:4242;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # WebSocket support (si nécessaire)
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        
        # Server-Sent Events (SSE) support
        proxy_buffering off;
        proxy_cache off;
        proxy_read_timeout 300s;
        proxy_connect_timeout 60s;
        proxy_send_timeout 300s;
        
        # Headers pour SSE
        add_header Cache-Control "no-cache";
        add_header X-Accel-Buffering "no";
    }

    # Health check (optionnel, pour monitoring)
    location /health {
        proxy_pass http://localhost:4242/health;
        access_log off;
    }

    # Logs
    access_log /var/log/nginx/dialogue-generator-access.log;
    error_log /var/log/nginx/dialogue-generator-error.log;
}

